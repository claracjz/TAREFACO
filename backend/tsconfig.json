{
    "compilerOptions": {
      "target": "ESNext",                     
      "module": "ESNext",  
      "moduleResolution": "node",   
      "rootDir": "./src",                  
      "outDir": "./dist",                  
      "strict": true,                      
      "esModuleInterop": true,            
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true ,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true                
    },
    "include": ["src/**/*.ts"],              
    "exclude": ["node_modules"]            
  }
  